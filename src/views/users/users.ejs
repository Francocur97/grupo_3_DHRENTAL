<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/head.ejs') %> 
</head>
<body>
    
    <%- include('../partials/header.ejs') %> 

        <main> 
    
        <section class="section-home">
            
        <% users.forEach(users => { %>
            <a class="tarjeta" href="/users/userDetail/<%= users.id %>">
                <article class="articulo-destacado">
                    <img class="imagen-home" src="/images/users/<%= users.image %> " alt="">
                    <p class="descripcion">Nombre: <%= users.name %></p>
                    <p class="descripcion">Apellido: <%= users.last_name %></p>
                    <p class="descripcion">Email: <%= users.email %></p>
                    <p class="descripcion">Domicilio: <%= users.adress %></p>
                    <p class="descripcion">Celular: <%= users.cell_phone %></p>     
                
                </article>
            </a>
            <% }) %>
    
            </section>

        </main>

    <%- include('../partials/footer.ejs') %> 
    
</body>
</html>