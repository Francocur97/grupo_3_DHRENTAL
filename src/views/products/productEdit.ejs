<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %> 

<body>

    <%- include('../partials/header.ejs') %> 

    <main class="main-form">

        <section class="sectionLogin">

            <h1 class="titular-login">Editar</h1>

            <form class="formlogin" action="/products/productEdit/<%= product.id %>?_method=put" method="POST" enctype="multipart/form-data">

                <label for="imagen">Imagen</label>
                <input class="input-producto" type="file" name="producto-imagen" id="imagen" placeholder="<%= product.imagen %>" required>

                <label for="titulo">Titulo:</label>
                <input class="input-producto" type="text" name="producto-titulo" id="titulo" placeholder="<%= product.nombre %>" required>

                <label for="descripcion">Descripcion:</label>
                <textarea class="input-producto"  name="producto-descripcion" id="descripcion" cols="30" rows="5" placeholder="<%= product.descripcion %>"></textarea>

                <label for="precio">Precio:</label>
                <input class="input-producto" type="number" name="producto-precio" id="precio" placeholder="<%= product.precio %>" required>

                <label for="oferta" class="form-label">Producto en oferta:</label>
                <select name="oferta" id="oferta" class="form-input">
                    <option value=""><%= product.oferta %></option>
                    <option value="No">No</option>
                    <option value="En-oferta">En oferta</option>
                </select>

                <label for="categoria" class="form-label">Categor√≠a:</label>
                <select name="categoria" id="categoria" class="form-input">
                    <option value=""><%= product.categoria %></option>
                    <option value="baterias">Baterias</option>
                    <option value="guitarras">Guitarras</option>
                    <option value="bajos">Bajos</option>
                    <option value="equipos-de-sonido-consola">Equipos de sonido/Consolas</option>

                </select>

                <Button type="submit" class="button">Editar producto</Button>

            </form>

        </section>

    </main>

    <%- include('../partials/footer.ejs') %> 

</body>

</html>