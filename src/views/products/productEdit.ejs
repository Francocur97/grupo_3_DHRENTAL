<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %> 

<body>

    <%- include('../partials/header.ejs') %> 

    <main class="main-form">

        <section class="sectionLogin">

            <h1 class="titular-login">Editar</h1>

            <form class="formlogin" action="/products/productEdit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                <label for="imagen">Imagen</label>
                <input class="input-producto" type="file" name="imagen" id="imagen" placeholder="<%= product.image %>" value="<%= product.image %>">

                <label for="titulo">Titulo:</label>
                <input class="input-producto" type="text" name="titulo" id="titulo" placeholder="<%= product.name %>" value="<%= product.name %>">

                <label for="descripcion">Descripcion:</label> 
                <textarea class="input-producto"  name="descripcion" id="descripcion" cols="30" rows="5" placeholder="<%= product.description %>" value="<%= product.description %>" ><%= product.description %></textarea>

                <label for="precio">Precio:</label>
                <input class="input-producto" type="number" name="precio" id="precio" placeholder="<%= product.price %>" value="<%= product.price %>">

                <label for="oferta" class="form-label">Producto en oferta:</label>
                <select name="oferta" id="oferta" class="form-input">
                    <option value="not">No</option>
                    <option value="yes">En oferta</option>
                </select>

                <label for="categoria" class="form-label">Categor√≠a:</label>
                <select name="categoria" id="categoria" class="form-input">
                    <option value="1">Criolla</option>
                    <option value="2">Electroacustica</option>
                    <option value="3">Electrica</option>
                </select>

                <Button type="submit" class="button">Editar producto</Button>

            </form>

        </section>

    </main>

    <%- include('../partials/footer.ejs') %> 

</body>

</html>