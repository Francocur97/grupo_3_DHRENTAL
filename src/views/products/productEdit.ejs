<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %> 

<body>

    <%- include('../partials/header.ejs') %> 

    <main>

        <section class="sectionLogin">

            <h1 class="titular-login">Editar</h1>

            <form class="formlogin">

                <label for="imagen">Imagen</label>
                <input class="input-producto" type="file" name="producto-imagen" id="imagen" required>

                <label for="titulo">Titulo:</label>
                <input class="input-producto" type="text" name="producto-titulo" id="titulo" required>

                <label for="descripcion">Descripcion:</label>
                <textarea class="input-producto"  name="producto-descripcion" id="descripcion" cols="30" rows="5" placeholder="Agregar descripcion del producto..."></textarea>

                <label for="precio">Precio:</label>
                <input class="input-producto" type="text" name="producto-precio" id="precio" required>

                <Button type="submit" class="button">Editar producto</Button>

                <Button type="reset" class="button">Borrar producto</Button>

            </form>

        </section>

    </main>

    <%- include('../partials/footer.ejs') %> 

</body>

</html>